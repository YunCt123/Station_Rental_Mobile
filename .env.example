# ========================================
# VNPAY CONFIGURATION (SANDBOX)
# ========================================

# VNPay Sandbox URL
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# VNPay Terminal Code (get from VNPay sandbox portal)
VNPAY_TMN_CODE=YOUR_SANDBOX_TMN_CODE

# VNPay Hash Secret (get from VNPay sandbox portal)
VNPAY_HASH_SECRET=YOUR_SANDBOX_HASH_SECRET

# Return URL for mobile app (deeplink)
# Format: myapp://payment/result
VNPAY_RETURN_URL=myapp://payment/result

# Return URL for rental final payment
VNPAY_RETURN_URL_RENTAL=myapp://payment

# ========================================
# VNPAY CONFIGURATION (PRODUCTION)
# ========================================
# Uncomment when ready for production:

# VNPAY_PAY_URL=https://pay.vnpay.vn/paymentv2/vpcpay.html
# VNPAY_TMN_CODE=YOUR_PRODUCTION_TMN_CODE
# VNPAY_HASH_SECRET=YOUR_PRODUCTION_HASH_SECRET
# VNPAY_RETURN_URL=https://yourdomain.com/api/v1/payments/vnpay/callback
# VNPAY_RETURN_URL_RENTAL=https://yourdomain.com/api/v1/payments/vnpay

# ========================================
# PAYOS CONFIGURATION (if using)
# ========================================
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key
PAYOS_RETURN_URL=myapp://payment/payos/result

# ========================================
# API CONFIGURATION
# ========================================
API_URL=http://localhost:3000/api/v1
PORT=3000

# ========================================
# DATABASE
# ========================================
MONGODB_URI=mongodb://localhost:27017/station_rental

# ========================================
# JWT
# ========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:19000,exp://

# ========================================
# NODE ENV
# ========================================
NODE_ENV=development
